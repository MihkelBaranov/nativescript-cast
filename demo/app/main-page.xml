<Page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  loaded="pageLoaded"
  class="page"
  xmlns:cast="nativescript-cast"
>
  <ActionBar title="Cast Demo">
    <ActionItem
      ios.position="right"
      android:visibility="{{ castVisibility }}"
    >
      <StackLayout>
        <cast:CastButton
          id="cast"
          cast="{{ handleCastEvent }}"
        />
      </StackLayout>
    </ActionItem>
  </ActionBar>
  <StackLayout>
    <ScrollView>
      <StackLayout>
        <Button
          text="Load Media"
          tap="{{ handleLoadTap }}"
          class="btn btn-primary"
          isEnabled="{{ canCast }}"
        />
        <StackLayout visibility="{{ canCast && hasControl ? 'visible' : 'collapsed'}}">
          <FlexboxLayout
            orientation="horizontal"
            justifyContent="space-between"
            class="controls"
          >
            <Button
              text="&#xff04b; Play"
              tap="{{ handlePlayTap }}"
              class="btn btn-primary"
              isEnabled="{{ canCast }}"
            />
            <Button
              text="&#xff04c; Pause"
              tap="{{ handlePauseTap }}"
              class="btn btn-primary"
              isEnabled="{{ canCast }}"
            />
            <Button
              text="&#xff04e; Seek"
              tap="{{ handleSeekTap }}"
              class="btn btn-primary"
              isEnabled="{{ canCast }}"
            />
            <Button
              text="&#xff04d; Stop"
              tap="{{ handleStopTap }}"
              class="btn btn-primary"
              isEnabled="{{ canCast }}"
            />
        </FlexboxLayout>

        <Button
          text="Show controller"
          tap="{{ handleShowControllerTap }}"
          class="btn btn-primary"
          isEnabled="{{ canCast }}"
        />

        <Button
          text="Switch Text Track"
          tap="{{ handleSwitchTextTrackTap }}"
          class="btn btn-primary"
          isEnabled="{{ canCast }}"
        />

        <FlexboxLayout
          orientation="horizontal"
          justifyContent="space-between"
          class="channel"
        >
          <Button
            text="Add Channel"
            tap="{{ handleAddChannelTap }}"
            class="btn btn-primary"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="Remove Channel"
            tap="{{ handleRemoveChannelTap }}"
            class="btn btn-primary"
            isEnabled="{{ channelConnected }}"
          />
        </FlexboxLayout>

        <Button
          text="Send Message"
          tap="{{ handleSendMessageTap }}"
          class="btn btn-primary"
          isEnabled="{{ channelConnected }}"
        />

        <TextView
          text="{{ mediaStatusString }}"
          editable="false"
          class="media-info"
        />
        <TextView
          text="{{ mediaInfoString }}"
          editable="false"
          class="media-info"
        />
        </StackLayout>
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>
